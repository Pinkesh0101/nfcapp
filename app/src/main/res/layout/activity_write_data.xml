<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WriteDataActivity"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Text"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_write_uri"
        app:layout_constraintTop_toBottomOf="@id/edt_input"
        android:layout_marginTop="12dp"
        android:onClick="onWriteText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Uri"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_write_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_input"
        android:layout_marginTop="12dp"
        android:onClick="onWriteUri"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Contact Info"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_txt"
        android:layout_marginTop="12dp"
        android:onClick="onWriteContactInfo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Phone Number"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_contact_info"
        android:layout_marginTop="12dp"
        android:onClick="onWritePhoneNumber"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_social_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Media"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_phone_number"
        android:layout_marginTop="12dp"
        android:onClick="onWriteSocialMediaPage"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Email"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_social_media"
        android:layout_marginTop="12dp"
        android:onClick="onWriteEmail"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_app_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch App"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_email"
        android:layout_marginTop="12dp"
        android:onClick="onWriteLaunchApp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_send_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_app_launch"
        android:layout_marginTop="12dp"
        android:onClick="onWriteSendSMS"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEO Location"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_write_address"
        app:layout_constraintTop_toBottomOf="@id/btn_write_send_sms"
        android:layout_marginTop="12dp"
        android:onClick="onWriteLocation"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Address"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_write_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_send_sms"
        android:layout_marginTop="12dp"
        android:onClick="onWriteAddress"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_wifi_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Wifi"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_write_bluetooth"
        app:layout_constraintTop_toBottomOf="@id/btn_write_location"
        android:layout_marginTop="12dp"
        android:onClick="onWriteWifiConfiguration"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Bluetooth"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_write_wifi_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_write_location"
        android:layout_marginTop="12dp"
        android:onClick="onWriteBluetoothConfiguration"/>



</androidx.constraintlayout.widget.ConstraintLayout>